@using petnb.DTL.Data.Models.Enums
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<div class="register-grid">

    <div class="register">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4 class="name-heading2">Register with</h4>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-register">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-register">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-register">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-register">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-register form-group ">
                <label asp-for="UserType" class="quck"></label>
                <div class="user-type-select-container">

                    <div class=" d-flex flex-column">
                        <input asp-for="UserType" type="radio" value="1" id="type-owner" class="owner" />
                        <label class="owner-label" for="type-owner"></label>
                        <label>Pet owner</label>

                    </div>

                    <div class=" d-flex flex-column">
                        <input asp-for="UserType" type="radio" value="2" id="type-sitter" checked="checked" class="sitter" />
                        <label class="sitter-label" for="type-sitter"></label>
                        <label>Pet sitter</label>
                    </div>
                </div>
            </div>

            @*<div class="form-register form-group">
                    <label asp-for="UserType" class="control-label"></label>
                    <select asp-for="UserType" class="form-control" asp-items="Html.GetEnumSelectList<UserType>()"></select>
                    <span asp-validation-for="UserType" class="text-danger"></span>
                </div>*@
            <div class="text-center">
                <button type="submit" class="form-register-btn">Register</button>
            </div>
        </form>
    </div>
</div>

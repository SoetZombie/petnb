<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - petnb</title>

    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="~/vendor.min.css" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

</head>
<body>
<div class="navbar-background">
    <div class="navbar-grid-container ">
        <div class="nav-grid nav-logo">
            <div class="nav-logo-background">
                <img class="nav-logo-img" src="images/Logo.png"/>
            </div>
        </div>
        <div class="nav-grid navi-links">
            <a href="" class="navi-link underline">Home </a>
            <a href="" class="navi-link underline">Find petsitter</a>
            <a href="" class="navi-link underline">Become petsitter</a>
            <a href="" class="navi-link underline">About</a>
        </div>
        <div class="authentication-btns">
            <div class="input-group authentication-btns">
                <button class="login-btn">Login</button>
                <button class="register-btn">Register</button>
            </div>
        </div>
    </div>
</div>





@RenderBody()



@RenderSection("Scripts", required: false)
<script src="~/vendor.min.js"></script>
<script src="~/js/site.js"></script>


</body>
</html>
